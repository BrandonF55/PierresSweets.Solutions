@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h1 class="jumbotron"><u>Add new Sweet Treat</u></h1>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  <br>
  <input class="btn btn-dark" type="submit" value="Add new Treat"  />
}
<br>
<p class="btn btn-dark">@Html.ActionLink("Show all Treats", "Index")</p>
