@{
  Layout = "_Layout";
}

<h2><u>Sign in / Sign out!</u></h2>
<hr />
<hr>
@if (User.Identity.IsAuthenticated)
{
  <p>Hello: @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-dark" value="Log out" /><br>
  }
}
else
{
  <p class="btn btn-dark">@Html.ActionLink("Register", "Register")</p><br>
  <p class="btn btn-dark">@Html.ActionLink("Log in", "Login")</p>
}
<hr><hr>