@{
    Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h1 class="jumbotron"><u>Add new Flavor!</u></h1><br>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>


<h3 class="head" style="margin-bottom: 50px;">Add New Flavor Here:</h3>
<hr>
@using (Html.BeginForm())

{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
<br>
<br>
    <input style="margin-bottom: 50px;" type="submit" value="Add new Flavor" class="btn btn-dark">
    
}