@{
    Layout = "_Layout";
}

@using Bakery.Models;

<h1 class="jumbotron"><u>This is our List Of Flavors</u></h1>

@if(@Model.Count == 0)
{
    <h3> No Flavors have been added yet!</h3>
}
else
{
    <ul>
        @foreach (Flavor flavor in Model)
        {
            <li class="flavor">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
        }

    </ul>
}

     <p class="btn btn-dark" id="link">@Html.ActionLink("Add new Flavors", "Create")</p><br>
   